<div class="container">
    <div class="row">
        <%= form_tag :sessions, action: :create do %>
            <div class="form-group">
                <td><%= label_tag :username %></td>
                <td class="form-control"><%= text_field_tag :username %></td>
            </div>
            <div class="form-group">
                <td><%= label_tag :password %></td>
                <td class="form-control"><%= password_field_tag :password %>
            </div>
            <div class="form-group">
                <%= submit_tag "Login" %>
            </div>
        <% end %>
    </div>
    <br>
    <div class="row">
        <h4>Belum memiliki akun?<%= link_to "Register",controller: 'accounts', action: 'new' %></h4>
    </div>
</div>
<%= render template:"admin-template/footer.html" %>