<%= render template:"admin-template/header.html" %>
<div class="container">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Title</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Nama Pengarang</th>
                    <th class="text-center">Page</th>
                    <th class="text-center">Price</th>
                    <th></th>
                </tr>
            </thead>
            <% @books.each do |book|%>
            <tbody>
                <tr>
                    <td ><%= book.title %></td>
                    <td ><%= book.description %></td>
                    <td><%= book.author.name %></td>
                    <td><%= book.page %></td>
                    <td><%= book.price %></td>
                    <td><%= link_to 'Detail', book_path(book), class:'btn btn-info' %></td>
                    <td><%= link_to 'Edit', edit_book_path(book), class:'btn btn-default' %></td>
                    <td><%= link_to 'Delete', book_path(book), method: :delete, data: {confirm: 'Are You Sure?'}, class:'btn btn-danger'  %></td>
                </tr>
            </tbody>
            <%end%>
            <br>
            <%= link_to "New Book", new_book_path, class:'btn btn-default' %>
        </table>
    </div>
</div>
<%= render template:"admin-template/footer.html" %>